<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Seja bem vindo"
            android:background="@color/colorPrimary">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@color/colorPrimaryDark">

            <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Seja bem vindo"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
            >

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

        <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:context=".MainActivity">
            <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                >


                    <Button
                            android:id="@+id/consultar_click"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#C63F00"
                            android:text="Teste de API"
                            android:layout_marginEnd="10dp"
                            android:onClick="abrirAtividadeReservas"
                    />

                    <Button
                            android:id="@+id/select_reserva"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#C63F00"
                            android:text="Reserva"
                            android:layout_marginEnd="10dp"
                            android:onClick="abrirAtividadeDocumentos"
                    />

                    <Button
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#C63F00"
                            android:text="Editais"
                            android:layout_marginEnd="10dp"
                            android:onClick="abrirAtividadeEditais"
                    />

                    <Button
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="#C63F00"
                            android:text="Eventos"
                            android:layout_marginEnd="10dp"
                            android:onClick="abrirAtividadeEventoss"
                    />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp">

    </androidx.cardview.widget.CardView>
</LinearLayout>